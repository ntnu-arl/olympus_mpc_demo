{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug olympus_drake",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/build/olympus_drake/olympus_drake_sim", 
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}/olympus_drake/",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "preLaunchTask": "build olympus_drake",
          "miDebuggerPath": "/usr/bin/gdb",
      }
  ]
}